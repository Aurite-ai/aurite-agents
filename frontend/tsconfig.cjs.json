{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist-cjs",
    "declaration": false,
    "declarationMap": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "examples/**/*",
    "dist/**/*",
    "dist-cjs/**/*",
    "node_modules/**/*"
  ]
}
