{
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/*.pyz": true,
    "**/*.pyw": true,
    "**/.obsidian/**": true,
    "**/.pytest_cache/**": true,
    "**/__pycache__/**": true,
    "**/.ruff_cache/**": true,
    "**/.python-version/**": true,
    "**/.venv/**": true,
    "**/*.egg-info/**": true,
    "**/.mypy_cache/**": true
  },
  "ruff.lint.ignore": ["F841", "E722", "E402"],
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.test.tsx, ${capture}.ts",
    "tsconfig.json": "tsconfig.*.json, jest.config.cjs, playwright.config.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "Dockerfile": "Dockerfile.dev, .dockerignore, docker-compose.yml",
    "pyproject.toml": "justfile, MANIFEST.in, .flake8, .pre-commit-config.yaml, .isort.cfg, .mypy.ini, ml_requirements.txt, setup.bat, setup.sh",
    "README.md": "usage_guide.md, LICENSE, SECURITY.md, CHANGELOG.md"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false // Disable format on save specifically if needed
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[dockerfile]": {
    // Keep existing specific settings
    "editor.formatOnSave":false
  },
}
