{
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/*.pyz": true,
    "**/*.pyw": true,
    "**/.obsidian/**": true,
    "**/.pytest_cache/**": true,
    "**/__pycache__/**": true,
    "**/.ruff_cache/**": true,
    "**/.python-version/**": true,
    "**/.venv/**": true,
    "notebook-venv/**": true,
    "**/*.egg-info/**": true,
    "**/.mypy_cache/**": true,
  },

  "ruff.lint.ignore": ["F841", "E722", "E402"],
  "fileNestingUpdater.autoUpdate": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.test.ts",
    "HOME.md": "aurite_logo.png, architecture_diagram.svg",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.test.tsx, ${capture}.ts",
    "tsconfig.json": "tsconfig.*.json, jest.config.cjs, playwright.config.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "Dockerfile": "Dockerfile.dev, .dockerignore, docker-compose*",
    "pyproject.toml": "poetry.lock, justfile, setup.sh, setup.bat, .pre-commit-config.yaml, .flake8, .isort.cfg, .mypy.ini, .pylintrc, .bandit, .coveragerc, MANIFEST.in",
    ".env": ".env*",
    "README.md": "usage_guide.md, openapi.yaml, LICENSE, SECURITY.md, CHANGELOG.md, README_packaged.md, claude.md"
  },
  "files.associations": {
    "*.css": "ansi",
    "*.ipynb": "jupyter"
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false // Disable format on save specifically if needed
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[dockerfile]": {
    // Keep existing specific settings
    "editor.formatOnSave": false
  }
}
