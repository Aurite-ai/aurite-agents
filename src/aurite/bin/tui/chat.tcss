/* Basic CSS for the chat interface */

/* Remove all complex styling for now */
Static {
    padding: 1;
    margin: 1;
}

Header {
    background: $primary;
}

Footer {
    background: $surface;
}

/* Chat history styling */
#chat-history {
    height: 1fr;
    padding: 1;
    border: solid $primary;
}

/* Message styling */
.user-message {
    background: $success-darken-1;
    border-left: thick $success;
    margin: 1 0;
    padding: 1;
}

.agent-message {
    background: $primary-darken-3;
    border-left: thick $primary;
    margin: 1 0;
    padding: 1;
}

/* Tool message styling */
.tool-message {
    background: $warning-darken-2;
    border-left: thick $warning;
    margin: 1 0;
    padding: 1;
}

.tool-output-message {
    background: $success-darken-2;
    border-left: thick $success;
    margin: 1 0;
    padding: 1;
}

/* Input styling */
#message-input {
    margin: 1;
    border: solid $accent;
}

#message-input:focus {
    border: solid $primary;
}
