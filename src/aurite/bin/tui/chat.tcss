/* Basic CSS for the chat interface */

/* Remove all complex styling for now */
Static {
    padding: 1;
    margin: 1;
}

Header {
    background: $primary;
}

Footer {
    background: $surface;
}

/* Chat history styling */
#chat-history {
    height: 1fr;
    padding: 1;
    border: solid $primary;
}

/* Message styling with thin rounded outlines and faint backgrounds */
.user-message {
    background: $success 10%;
    border: round $success;
    margin: 1 0;
    padding: 1;
}

.agent-message {
    background: $primary 10%;
    border: round $primary;
    margin: 1 0;
    padding: 1;
}

/* Tool message styling */
.tool-message {
    background: $warning 10%;
    border: round $warning;
    margin: 1 0;
    padding: 1;
}

.tool-output-message {
    background: $success 15%;
    border: round $success;
    margin: 1 0;
    padding: 1;
}

/* Input styling */
#message-input {
    margin: 1;
    border: solid $accent;
}

#message-input:focus {
    border: solid $primary;
}
